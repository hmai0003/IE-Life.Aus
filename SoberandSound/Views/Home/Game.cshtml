
@{
    ViewBag.Title = "Game";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container zero-margin zero-padding" style="width: 100%;">
    <div class="row" style="text-align:center;">
        <div class="col-12">
            <header>
                <h1>Memory Game</h1>
            </header>
        </div>
    </div>

    <div class="row" style="display: block; margin: auto;">
        <section class="score-panel" style="text-align:center;">
            <span id="c1" style="font-size:20px;">0</span> Move(s)
        </section>
    </div>

    <div class="row" style="display: block; margin: auto;text-align:center;">
        <a class="w3-center btn link" onClick="window.location.reload()">Play Again</a>
    </div>

    <div class="row memory-game">
        <div class="memory-card" data-framework="aurelia">
            <img class="front-face" src="~/Images/Thank-You-PixTeller.png" alt="Aurelia" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>
        <div class="memory-card" data-framework="aurelia">
            <img class="front-face" src="~/Images/Ta.png" alt="Aurelia" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>
        <div class="memory-card" data-framework="vue">
            <img class="front-face" src="~/Images/Evo.png" alt="Vue" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>
        <div class="memory-card" data-framework="vue">
            <img class="front-face" src="~/Images/Evening.png" alt="Vue" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>

        <div class="memory-card" data-framework="angular">
            <img class="front-face" src="~/Images/Magic2.png" alt="Angular" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>
        <div class="memory-card" data-framework="angular">
            <img class="front-face" src="~/Images/Coffee2.png" alt="Angular" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>

        <div class="memory-card" data-framework="ember">
            <img class="front-face" src="~/Images/HDI.png" alt="Ember" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>
        <div class="memory-card" data-framework="ember">
            <img class="front-face" src="~/Images/2nd highest.png" alt="Ember" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>

        <div class="memory-card" data-framework="backbone">
            <img class="front-face" src="~/Images/Kang and Emu.png" alt="Backbone" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>
        <div class="memory-card" data-framework="backbone">
            <img class="front-face" src="~/Images/Forward Thinking.png" alt="Backbone" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>

        <div class="memory-card" data-framework="react">
            <img class="front-face" src="~/Images/Servo.png" alt="React" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>
        <div class="memory-card" data-framework="react">
            <img class="front-face" src="~/Images/Service Station.png" alt="React" />
            <img class="back-face" src="~/Images/Memory Game.png" alt="JS Badge" />
        </div>
    </div>
</div>

<script src="~/Scripts/gamescripts.js"></script>








